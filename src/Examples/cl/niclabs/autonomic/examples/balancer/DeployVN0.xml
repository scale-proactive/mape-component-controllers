<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment
	xmlns="urn:gcm:deployment:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:deployment:1.0 http://proactive.inria.fr/schemas/gcm/1.0/ExtensionSchemas.xsd	">

	<resources>
		<group refid="group0">
	        	<host refid="tripio" />
	    	</group>
	</resources>

	<infrastructure>

		<hosts>
			<host id="tripio" os="unix" hostCapacity="2" vmCapacity="8">
				<homeDirectory base="root" relpath="/user/mibanez"/>
			</host>
		</hosts>
	
		<groups>
	        	<sshGroup id="group0" hostList="tripio" />
		</groups>

	</infrastructure>

</GCMDeployment>
